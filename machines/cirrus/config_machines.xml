<machine MACH="cirrus">
    <DESC>NCAR AMD EPYC 9354P (CPU nodes) and NVIDIA A10/A2 (GPU nodes) cloud service </DESC>
    <OS>LINUX</OS>
    <COMPILERS>gnu</COMPILERS>
    <MPILIBS>openmpi</MPILIBS>
    <CIME_OUTPUT_ROOT>$ENV{TMP}</CIME_OUTPUT_ROOT>
    <DIN_LOC_ROOT>$ENV{TMP}/inputdata</DIN_LOC_ROOT>
    <DIN_LOC_ROOT_CLMFORC>$ENV{TMP}/inputdata/atm/datm7</DIN_LOC_ROOT_CLMFORC>
    <DOUT_S_ROOT>$CIME_OUTPUT_ROOT/archive/$CASE</DOUT_S_ROOT>
    <BASELINE_ROOT>$ENV{TMP}/cesm_baselines</BASELINE_ROOT>
    <CCSM_CPRNC>$ENV{TMP}/cprnc/cprnc</CCSM_CPRNC>
    <GMAKE_J>4</GMAKE_J>
    <BATCH_SYSTEM>none</BATCH_SYSTEM>
    <SUPPORTED_BY>cisl</SUPPORTED_BY>
    <MAX_TASKS_PER_NODE>64</MAX_TASKS_PER_NODE>
    <MEM_PER_TASK>10</MEM_PER_TASK>
    <MAX_MEM_PER_NODE>450</MAX_MEM_PER_NODE>
    <MAX_GPUS_PER_NODE>1</MAX_GPUS_PER_NODE>
    <MAX_MPITASKS_PER_NODE>64</MAX_MPITASKS_PER_NODE>
    <MAX_CPUTASKS_PER_GPU_NODE>1</MAX_CPUTASKS_PER_GPU_NODE>
    <PROJECT_REQUIRED>FALSE</PROJECT_REQUIRED>
    <mpirun mpilib="openmpi">
      <executable>mpiexec</executable>
      <arguments>
        <arg name="anum_tasks"> -n {{ total_tasks }}</arg>
      </arguments>
    </mpirun>
    <module_system type="none">
    </module_system>
</machine>